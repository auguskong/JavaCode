<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <!-- 配置bean -->
    <bean id="helloWorld" class="com.atguigu.spring.beans.HelloWorld">
        <property name="name" value="Spring"></property>
    </bean>

    <bean id="car" class="com.atguigu.spring.beans.Car">
        <property name="brand" value="Audi"></property>
        <property name="city" value="Shanghai"></property>
        <property name="price" value="342000"></property>
    </bean>

    <bean id="car2" class="com.atguigu.spring.beans.Car">
        <constructor-arg value="Benz" type="java.lang.String"></constructor-arg>
        <constructor-arg value="Beijing"></constructor-arg>
        <constructor-arg>
            <value>245.00</value>
        </constructor-arg>
    </bean>
    
    <bean id="person" class="com.atguigu.spring.beans.Person">
        <property name="name" value="Tom"></property>
        <property name="age" value="24"></property>
        <!--使用property的ref属性简历bean之间的引用关系-->
        <property name="car" ref="car2"></property>
    </bean>
</beans>
